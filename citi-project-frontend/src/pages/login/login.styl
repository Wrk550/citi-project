.login-container 
  display: flex
  flex-direction: column
  align-items: center
  justify-content: center
  height: 100vh
  background-color: #f2f2f2


h2 
  margin-bottom: 20px


.login-form 
  display: flex
  flex-direction: column
  align-items: center
  padding: 80px
  background-color: #ffffff
  border-radius: 20px
  box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1)


.login-form-group 
  display: flex
  flex-direction: column
  margin-bottom: 25px


label 
  margin-bottom: 15px


.login-input 
  padding: 5px
  border: 1px solid #ccc
  border-radius: 3px


.login-btn
  padding: 10px 25px
  background-color: #007bff
  color: #ffffff
  border: none
  border-radius: 3px
  cursor: pointer


.login-btn:hover 
  background-color: #0056b3
