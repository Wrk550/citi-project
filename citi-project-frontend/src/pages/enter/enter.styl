
*
 margin:0
 padding:0
 box-sizing:border-box
body
 height:100% 
 background:#eff0f4


.enter 
  width: 100%;
  height: 100%;
  position: relative;
  overflow: hidden;
  display: flex
  background:#eff0f4

 
.left
  flex: 1
  background-color: #2367c7
  position: relative
  display: flex
 
  color: white
  border-radius:11% 79% 36% 56%/13% 9% 65% 7%;

.welcome
  font-size: 80px
  font-weight: bold
  margin-left:80px
  margin-top:90px
  border-radius:5px
  
  
img
  border-radius: 50%
  height:130px
  width:230px
  margin-left:25px
  margin-top:200px
  margin-right:40px
  

.enter .enter-container 
  position:relative
  display: flex
  flex-direction: column
  justify-content:space-around
  align-items: center
  width:450px
  height:400px
  margin-top:180px 
  margin-left:120px
  margin-right:40px
  padding:60px,20px
  box-shadow:
     inset 20px 20px 20px rgba(0,0,0,.05),
           25px 35px 20px rgba(0,0,0,.05),
           25px 30px 30px rgba(0,0,0,.05),
     inset -20px -20px 25px rgba(255,255,255,.9);

.enter .enter-container 
   transition:.5s
   border-radius:52% 48% 33% 67% / 38% 45% 55% 62%
.enter .enter-container :hover
   border-radius:25%


h2 
  margin: 15px

.enter-btn
  padding: 10px 25px
  background-color: #eff0f4
  color: #ffffff
  border:none
  border-radius:25px 
  cursor: pointer
  margin-bottom:15px
  box-shadow:
     inset 20px 20px 20px rgba(0,0,0,.05),
           25px 35px 20px rgba(0,0,0,.05),
           25px 30px 30px rgba(0,0,0,.05),
     inset -20px -20px 25px rgba(255,255,255,.9);

.enter-btn:hover 
  background-color: white
